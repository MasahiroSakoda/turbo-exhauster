{
  "extends": "@tooling/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      { "name": "next" }
    ],
    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"],
      "@tooling/*": ["../../tooling/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "next-env.d.ts", "next.config.js", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
